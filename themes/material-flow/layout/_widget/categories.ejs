<section class="m_widget categories">
<div class="header fa fa-th">Categories</div>
<div class="content">
    <% if (site.categories.length){ %>
    <ul class="entry">
    <% site.categories.sort("name").each(function(category){ %>
        <li>
            <a itemprop="url" class="flat-box" href="<%= url_for(category.path) %>">
                <div class="name"><%= category.name %></div>
                <div class="badget"><%= category.posts.length %></div>
            </a>
        </li>
    <% }); %>
    </ul>
    <% } %>
</div>
</section>